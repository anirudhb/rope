{
  "compilerOptions": {
    "target": "es2024",
    "module": "esnext",
    "outDir": "out",
    "lib": ["es2024", "dom"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowUmdGlobalAccess": true,
    "jsx": "react",
    "jsxFactory": "globalThis.React.createElement",
    "jsxFragmentFactory": "globalThis.React.Fragment"
  },
  "references": [
    { "path": "./jspatching" }
  ],
  "include": ["src/**/*"]
}
